// ============================================================
// Frogkit variables
// ============================================================

$font-size-root = 10px
$body-font-family = Roboto Condensed,sans-serif
$line-height-root = 1.5

$colors := {
  orange: {
    base: #f18713,
    dark: #cd7310,
    light: #f8c389
  },
  blue: {
    base: #2f82c4,
    dark: #286fa7,
    light: #97c1e2
  },
  grey: {
    base: #A7A7A7,
    dark: #7A7A7A,
    light: #D5D5D5
  },
}

$colors-typography := {
  orange: {
    base: #f18713
  },
  blue: {
    base: #2f82c4
  },
  grey: {
    base: #414141,
    light: #7a7a7a
  }
}

$colors-input := {
  default: {
    label: #414141,
    bg: #f4f4f4,
    border: #d5d5d5
  },
  disabled: {
    bg: #e7e7e7,
    border: #d8d8d8
  },
  focus: {
    border: #2f82c4
  },
  error: {
    border: #e20d00
  },
  placeholder: {
    text: #a7a7a7
  },
  small: {
    bg: #fff
  }
}
