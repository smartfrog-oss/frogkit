@import '../_vars'


bundle-recap-mixin()
  background-color white
  width 100%
  padding 10px
  & &__icon
    width 20px
    height 20px

  & &__cadre
    position relative
    max-width 90px
    @media(max-width $bp-md)
      width 55px
      
    &--small
      width 90px
      @media(max-width $bp-lg)
        width 75px
      @media(max-width $bp-md)
        width 50px
      @media(max-width $bp-sm - 1)
        width 100% 

  & &__item
    max-height 100px
    display: block
    margin: 0 auto
    &--small
      @media(min-width $bp-sm)
        max-width 20%        
        max-width 45px
  
  & &__label
    width 100%
    min-width 60px
    font-size: 1.6rem
    text-align: center
    &--small
      font-size: 1.4rem
