@require '../_vars'


$colors-select := {
  default: {
    label: #414141,
    bg: #f4f4f4,
    border: #d5d5d5
  },
  disabled: {
    bg: #e7e7e7,
    border: #d8d8d8
  },
  focus: {
    border: #2f82c4
  },
  error: {
    border: #e20d00
  }
}

set-color($variation)
  if $colors-select[$variation].bg
    background-color: $colors-select[$variation].bg
  if $colors-select[$variation].border
    border: 1px solid $colors-select[$variation].border


$select-skeleton
  set-color('default')
  color: $colors-select.default.label
  font-size: 2rem
  font-family: $body-font-family
  font-weight: 400
  display: inline-block
  height: 44px
  line-height: @height
  padding-left: 14px
  padding-right: 36px
  background-image: url('../assets/down-arrow-select.svg')
  background-repeat: no-repeat
  background-position: right 10px center
  background-size: 16px
  outline: none
  border-radius: 4px

select-mixin()
  @extends $select-skeleton
  &&--error
    set-color('error')
  &:focus
    set-color('focus')
  &:disabled
    cursor: not-allowed
    set-color('disabled')
  &&--block
    width: 100%
    display: block
